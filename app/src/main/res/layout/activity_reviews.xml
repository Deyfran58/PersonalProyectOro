<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD700"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4A148C"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginBottom="24dp">

            <!-- Logo GoldNet -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GoldNet"
                android:textSize="48sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reseñas de Clientes"
                android:textSize="22sp"
                android:textColor="#FFD700"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- REVIEW 1: Alfredo Salazar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="6dp"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/ivAlfredo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/alfredo"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alfredo Salazar"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#4A148C" />

                <RatingBar
                    android:id="@+id/rating1"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="5"
                    android:isIndicator="true"
                    android:progressTint="#FFD700"
                    android:stepSize="0.5" />

                <TextView
                    android:id="@+id/tvComment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¡El oro 18K es hermoso! Brilla increíble."
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- REVIEW 2: Yadrick Hong Tu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="6dp"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/ivYadrick"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/chino"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yadrick Hong Tu"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#4A148C" />

                <RatingBar
                    android:id="@+id/rating2"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="2"
                    android:isIndicator="true"
                    android:progressTint="#FFD700"
                    android:stepSize="0.5" />

                <TextView
                    android:id="@+id/tvComment2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ese oro se para, ese oro es laminado"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- REVIEW 3: Nidia Herrera -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="6dp"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/ivNidia"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/nidia"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nidia Herrera"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#4A148C" />

                <RatingBar
                    android:id="@+id/rating3"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="5"
                    android:isIndicator="true"
                    android:progressTint="#FFD700"
                    android:stepSize="0.5" />

                <TextView
                    android:id="@+id/tvComment3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Envío rápido y oro puro. ¡Recomendado!"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMenu"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Menú"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#7C4DFF"
            app:cornerRadius="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:elevation="10dp"
            app:icon="@drawable/ic_menu"
            app:iconGravity="textStart"
            app:iconPadding="16dp" />

    </LinearLayout>
</ScrollView>