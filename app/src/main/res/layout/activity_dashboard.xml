<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD700"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GoldNet"
        android:textSize="48sp"
        android:textColor="#4A148C"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido!"
        android:textSize="28sp"
        android:textColor="#4A148C"
        app:layout_constraintTop_toBottomOf="@id/tvLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMisPedidos"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#7C4DFF"
            android:text="Productos"
            android:textColor="#FFFFFF"
            app:cornerRadius="50dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResenas"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#7C4DFF"
            android:text="Reseñas"
            android:textColor="#FFFFFF"
            app:cornerRadius="50dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNotificaciones"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#7C4DFF"
            android:text="Mi carrito"
            android:textColor="#FFFFFF"
            app:cornerRadius="50dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewUsers"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:text="Ver Usuarios"
            android:textColor="#7C4DFF"
            app:strokeColor="#7C4DFF"
            app:icon="@drawable/ic_people"
            app:iconTint="#7C4DFF"
            app:cornerRadius="50dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarSesion"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:text="Cerrar Sesión"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D32F2F"
            app:cornerRadius="50dp"
            android:layout_marginTop="40dp"
            app:icon="@drawable/ic_logout"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"
            app:iconPadding="16dp"
            android:elevation="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>